<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.sc.ScCommentDao">

    <resultMap type="com.platform.entity.sc.ScCommentEntity" id="scCommentMap">
        <result property="id" column="id"/>
        <result property="infoId" column="info_id"/>
        <result property="avatar" column="avatar"/>
        <result property="name" column="name"/>
        <result property="content" column="content"/>
        <result property="agreeNum" column="agree_num"/>
        <result property="createTime" column="create_time"/>
        <result property="dataStatus" column="data_status"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.sc.ScCommentEntity">
		select
			`id`,
			`info_id`,
			`avatar`,
			`name`,
			`content`,
			`agree_num`,
			`create_time`,
			`data_status`
		from sc_comment
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.sc.ScCommentEntity">
		select
    		`id`,
    		`info_id`,
    		`avatar`,
    		`name`,
    		`content`,
    		`agree_num`,
    		`create_time`,
    		`data_status`
		from sc_comment
		WHERE 1=1
		<if test="infoId != null and infoId.trim() != ''">
			AND `info_id` = #{infoId}
		</if>
		<if test="content != null and content.trim() != ''">
			AND content LIKE concat('%',#{content},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sc_comment
		WHERE 1=1
		<if test="infoId != null and infoId.trim() != ''">
			AND `info_id` = #{infoId}
		</if>
		<if test="content != null and content.trim() != ''">
			AND content LIKE concat('%',#{content},'%')
		</if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.sc.ScCommentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sc_comment(
			`info_id`,
			`avatar`,
			`name`,
			`content`,
			`agree_num`,
			`create_time`,
			`data_status`)
		values(
			#{infoId},
			#{avatar},
			#{name},
			#{content},
			#{agreeNum},
			#{createTime},
			#{dataStatus})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.sc.ScCommentEntity">
		update sc_comment 
		<set>
			<if test="infoId != null">`info_id` = #{infoId}, </if>
			<if test="avatar != null">`avatar` = #{avatar}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="agreeNum != null">`agree_num` = #{agreeNum}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="dataStatus != null">`data_status` = #{dataStatus}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sc_comment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sc_comment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>